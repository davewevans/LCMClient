<div class="md:flex ml-8 mr-8 mt-4 mb-8 bg-blue-100 p-4 items-center justify-between">
    <div class="">
        <h3 class="text-blue-600 text-2xl" font-bold>@Orphan.FirstName's Profile</h3>
    </div>
    <div class="">
        <button @onclick="ToggleEditMode" class="bg-blue-600 hover:bg-blue-800 text-white font-semibold hover:text-white py-2 px-4 rounded">
            <div class="flex items-center">
                <i class="@editViewIcon mr-2"></i> @editViewText
            </div>
        </button>
    </div>
</div>


@if (editMode)
{
    <div class="mb-20">
        <OrphanProfileEdit Orphan="@Orphan" HandleOrphanEdited="@HandleOrphanEditedByChild" />
    </div>
}
else
{
    <div class="mb-20">
        <OrphanProfileView Orphan="@Orphan" HandleToggleEditView="@ToggleEditMode" />
    </div>
}