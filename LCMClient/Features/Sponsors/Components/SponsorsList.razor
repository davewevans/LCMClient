@page "/sponsors"

@attribute [Authorize(Roles = "Admin,Staff,SponsorReadWrite,Guest")]

@inject NavigationManager navigationManager
@inject IJSRuntime jsRuntime
@inject IDialogService Dialog
@inject IMatToaster Toaster

<div class="m-10">
    <div class="flex justify-between mb-4">
        <div class="flex items-center mb-4">
            <div class="mr-5 text-blue-800">
                <OrphanSVG Width="10" Height="10"/>
            </div>
            <div>
                <h3 class="text-blue-800 font-semibold text-4xl">Sponsors</h3>
            </div>

        </div>
        <div class="mr-10">
            <AuthorizeView Roles="Admin,Staff,SponsorReadWrite">
                <Authorized>
                    <MudButton Variant="Variant.Filled"
                               Color="Color.Primary"
                               StartIcon="@Icons.Material.Add"
                               @onclick="CreateNewSponsorEventHandler">
                        Create New Sponsor
                    </MudButton>
                </Authorized>
                <NotAuthorized>

                </NotAuthorized>
            </AuthorizeView>

        </div>
    </div>
    <SponsorsDataGrid/>
</div>

@code {

    protected override async Task OnInitializedAsync()
    {
    }

    private void CreateNewSponsorEventHandler()
    {
        navigationManager.NavigateTo("/sponsorCreation");
    }

}